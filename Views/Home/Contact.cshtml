@{
ViewData["Title"] = "Contact Us";
}
<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Contact Us</title>
      <style>
         body {
         font-family: Arial, sans-serif;
         background-color: #121826;
         margin: 0;
         padding: 0;
         }
         h1 {
         text-align: left;
         color: #fff;
         margin-top: 50px;
         }
         .grid {
         display: flex;
         flex-wrap: wrap;
         gap: 20px;
         }
         .left, .right {
         flex: 1;
         min-width: 300px;
         }
         .contact-info {
         margin-bottom: 20px;
         color: #fff;
         }
         .contact-info p {
         display: flex;
         align-items: center;
         font-size: 16px;
         color: #fff;
         }
         .contact-info p i {
         margin-right: 10px;
         color: #007BFF;
         }
         iframe {
         width: 100%;
         border-radius: 8px;
         color: #fff;
         }
         form {
         display: flex;
         flex-direction: column;
         color: #fff;
         }
         label {
         font-weight: bold;
         margin: 10px 0 5px;
         color: #fff;
         }
         input, textarea {
         padding: 10px;
         width: 100%;
         border: 1px solid #ccc;
         border-radius: 5px;
         font-size: 16px;
         }
         button {
         margin-top: 15px;
         background-color: #007BFF;
         color: white;
         padding: 10px;
         border: none;
         border-radius: 5px;
         font-size: 18px;
         cursor: pointer;
         }
         button:hover {
         background-color: #0056b3;
         }
         .getin {
         color: #fff;
         }
      </style>
   </head>
   <body>
      <div class="container">
         <h1>Contact Us</h1>
         <div class="grid">
            <!-- Left Section -->
            <div class="left">
               <h2 class="getin">Get in Touch</h2>
               <div class="contact-info">
                  <p><i class="fas fa-envelope"></i> contact@MND.com</p>
                  <p><i class="fas fa-phone"></i> +91 XXXXXXXXXX</p>
                  <p><i class="fas fa-map-marker-alt"></i> R.K. University, Rajkot</p>
               </div>
               <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.0261466452077!2d70.7388941!3d22.273625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959c98ac71cdf0f%3A0x76dd15cfbe93ad3b!2sRajkot%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1690389999999!5m2!1sen!2sin"
                  width="100%" height="250" allowfullscreen="" loading="lazy">
               </iframe>
            </div>
            <!-- Right Section (Contact Form) -->
            <div class="right">
               <h2 class="getin">Send a Message</h2>
               <form id="contactForm">
                  <label for="name">Name</label>
                  <input type="text" id="name" name="name" required>
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" required>
                  <label for="message">Message</label>
                  <textarea id="message" name="message" rows="4" required></textarea>
                  <button type="submit">Send Message</button>
               </form>
            </div>
         </div>
      </div>
      <script>
         document.getElementById("contactForm").addEventListener("submit", async function (event) {
             event.preventDefault();
         
             const formData = {
                 name: document.getElementById("name").value,
                 email: document.getElementById("email").value,
                 message: document.getElementById("message").value
             };
         
             try {
                 const response = await fetch('http://localhost:3001/api/contact', {
                     method: 'POST',
                     headers: { 'Content-Type': 'application/json' },
                     body: JSON.stringify(formData)
                 });
         
                 const data = await response.json();
         
                 if (response.ok) {
                     alert('Your message has been sent!');
                     document.getElementById("contactForm").reset();
                 } else {
                     alert('Something went wrong. Please try again.');
                 }
             } catch (error) {
                 alert('Error submitting form. Please try again.');
             }
         });
      </script>
   </body>
</html>